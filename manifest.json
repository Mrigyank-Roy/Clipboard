{
  "manifest_version": 3,
  "name": "Clipboard",
  "version": "2.0",
  "description": "Advanced clipboard manager to save, edit, delete, and reorder text snippets easily, with titles for quick access.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon/clipboard16.png",
      "48": "images/icon/clipboard48.png",
      "128": "images/icon/clipboard128.png"
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead"
  ]
}